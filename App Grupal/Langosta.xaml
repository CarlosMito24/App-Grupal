<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Grupal.Langosta"
             Title="Langosta">

    <ScrollView>
        <VerticalStackLayout Margin="25, 25, 25, 25">
            <Image Source="langosta.jpg" WidthRequest="300"/>
            <Label Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium">Digite el numero de personas</Label>
            <Entry x:Name="np" Placeholder="Numero Personas" Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium"></Entry>
            <Button Text="Calcular Pago" Clicked="Button_Clicked" Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium"></Button>
            <Label Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium">El pago es:</Label>
            <Label x:Name="la" Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium"></Label>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>